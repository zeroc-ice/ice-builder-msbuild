  <Target Name="AfterBuild" Condition="Exists('$(SIGN_CERTIFICATE)')">
      <Exec Command="$(SignCommandSHA1) $(OutputPath)$(AssemblyName).dll" />
      <Exec Command="$(SignCommandSHA256) $(OutputPath)$(AssemblyName).dll" />
  </Target>
</Project>
