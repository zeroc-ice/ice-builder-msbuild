    <ProjectGuid>{92CBD919-8F0D-477E-813E-880BAD8236FD}</ProjectGuid>
    <OutputType>Library</OutputType>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <AssemblyName>zeroc.icebuilder.msbuild</AssemblyName>
